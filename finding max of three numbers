num1=input('enter 1st number:')
num2=input('enter 2nd number:')
num3=input('enter 3rd number:')

if(num1>num2):
    if(num1>num3):
        print('1st number is largest',num1)
    else:
        print('3rd number is largest',num3)
elif(num2>num3):
    print('2nd number is largest',num2)
else:
    print('3rd number is largest',num3)
    
