password="1234"
tries=1

input_pass=input('enter password')
while(tries<3):
    
    if (input_pass==password):
        print('access granted!')
        break
    else:
        print('access denied!')
        input_pass=input('enter password')
        tries+=1
        
if(tries==3):
    print("account is locked, please contact support")
        
